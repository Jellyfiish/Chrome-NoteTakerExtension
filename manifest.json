{
  "manifest_version": 2,

  "name": "NoteTakerExtention",
  "description": "This extension saves notes to a database for any url",
  "version": "1.0",

  "browser_action": {
    "icons": ["yummypanguin.png"],
    "default_icon": "yummypanguin.png",
    "default_popup": "/src/browser_action/browser_action.html"
  },
  "background": {
    "scripts": [
      "./jquery-3.2.1.min.js",
      "./env.js",
      "node_modules/auth0-chrome/dist/auth0chrome.min.js",
      "src/main.js",
      "src/browser_action/browser_action.js"
      // "jquery.highlight.js",
      // "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["scroll.js"],
      "matches": ["http://*/*", "https://*/*", "<all_urls>"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "identity",
    "notifications",
    "background"
  ]
}